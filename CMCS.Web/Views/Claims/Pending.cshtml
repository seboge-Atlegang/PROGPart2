@model IEnumerable<CMCS.Web.Models.ClaimRecord>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0 text-white">
            <i class="fas fa-clock me-2"></i>Pending Claims
            <span class="badge bg-light text-dark ms-2">@Model.Count()</span>
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4>No Pending Claims</h4>
                <p class="text-muted">All claims have been processed.</p>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var claim in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card border-warning h-100">
                            <div class="card-header bg-warning bg-opacity-10">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">Claim #@claim.Id</h6>
                                    <span class="badge bg-warning text-dark">Pending Review</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@claim.LecturerName</h6>
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <small class="text-muted">Hours:</small>
                                        <div>@claim.HoursWorked</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Hourly Rate:</small>
                                        <div>R @claim.HourlyRate.ToString("N2")</div>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Total Amount:</small>
                                    <div class="h5 text-success">R @claim.Amount.ToString("N2")</div>
                                </div>
                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted">Notes:</small>
                                        <div class="small">@claim.Notes</div>
                                    </div>
                                }
                                @if (claim.DocumentId.HasValue)
                                {
                                    var documents = ViewBag.Documents as IEnumerable<CMCS.Web.Models.ClaimDocument>;
                                    var document = documents?.FirstOrDefault(x => x.Id == claim.DocumentId.Value);
                                    if (document != null)
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">Document:</small>
                                            <div>
                                                <a href="@document.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-download me-1"></i>@document.FileName
                                                </a>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100">
                                    <a asp-action="Details" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye me-1"></i>Details
                                    </a>
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check me-1"></i>Approve
                                        </button>
                                    </form>
                                    <form asp-action="Reject" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-times me-1"></i>Reject
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>