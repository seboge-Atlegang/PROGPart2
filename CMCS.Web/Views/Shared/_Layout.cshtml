<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --pink-primary: #e83e8c;
            --pink-light: #f8d7da;
            --pink-dark: #c2185b;
            --gradient-pink: linear-gradient(135deg, #e83e8c, #c2185b);
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--pink-primary) !important;
        }

        .btn-primary {
            background: var(--gradient-pink);
            border: none;
        }

        .btn-primary:hover {
            background: var(--pink-dark);
            transform: translateY(-1px);
        }

        .card-header {
            background: var(--gradient-pink);
            color: white;
        }

        .stat-card {
            border-left: 4px solid var(--pink-primary);
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-3px);
        }

        .badge-pink {
            background-color: var(--pink-primary);
        }

        .nav-link.active {
            color: var(--pink-primary) !important;
            font-weight: bold;
        }

        .dashboard-welcome {
            background: linear-gradient(135deg, #f8d7da, #e83e8c);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-file-invoice-dollar me-2"></i>CMCS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @IsActive("Home", "Index")" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>

                    @if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Claims", "Create")" asp-controller="Claims" asp-action="Create">
                                <i class="fas fa-plus-circle me-1"></i>Submit Claim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Claims", "MyClaims")" asp-controller="Claims" asp-action="MyClaims">
                                <i class="fas fa-list me-1"></i>My Claims
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Coordinator") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Claims", "Pending")" asp-controller="Claims" asp-action="Pending">
                                <i class="fas fa-clock me-1"></i>Pending Claims
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Admin", "Index")" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-chart-bar me-1"></i>Admin Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Lecturer", "Index")" asp-controller="Lecturer" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Manage Users
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link @IsActive("Lecturer", "Profile")" asp-controller="Lecturer" asp-action="Profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-dark">
                                <i class="fas fa-user-circle me-1"></i>Hello, @User.Identity.Name!
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-outline-danger btn-sm ms-2">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0 text-muted">&copy; 2024 CMCS - Claims Management System</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@functions {
    private string IsActive(string controller, string action)
    {
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        return (currentController == controller && currentAction == action) ? "active" : "";
    }
}